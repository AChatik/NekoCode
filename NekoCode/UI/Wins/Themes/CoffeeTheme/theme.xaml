<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NekoCode">
    <!-- COFFEE -->
    <!-- GLOBAL COLORS-->
    <SolidColorBrush x:Key="BGColor" Color="#FF231811"/>
    <SolidColorBrush x:Key="BodyColor" Color="#FF231811"/>
    <SolidColorBrush x:Key="BodySpecialColor" Color="#FF5B4B3F"/>
    <SolidColorBrush x:Key="FontColor" Color="MintCream"/>
    <SolidColorBrush x:Key="InfoFontColor" Color="#FFC1AEA1"/>
    <SolidColorBrush x:Key="GridSplitterColor" Color="#FFAD8F83"/>
    <SolidColorBrush x:Key="SpecialColor" Color="#FFB5947D"/>
    <SolidColorBrush x:Key="BorderColor" Color="#f111"/>
    <SolidColorBrush x:Key="TasksCompleteColor" Color="#FFC58891"/>

    <Thickness x:Key="Padding" Bottom="5" Left="5" Right="5" Top="5"/>
    <CornerRadius x:Key="CornerRadius" TopLeft="15" TopRight="15" BottomLeft="15" BottomRight="15"/>

    <!-- NEKOEDITOR HIGHTLIGHTS COLORS-->
    <SolidColorBrush x:Key="HighLightsBaseColor" Color="MintCream"/>
    <SolidColorBrush x:Key="HighLightsStringColor" Color="#FFDC997F"/>
    <SolidColorBrush x:Key="HighLightsDigitColor" Color="#FF6D5441"/>
    <SolidColorBrush x:Key="HighLightsSpecialColor" Color="#FFB3815E"/>
    <SolidColorBrush x:Key="HighLightsLineIdColor" Color="#FFFFD0AD"/>
    <SolidColorBrush x:Key="HighLightsCommentColor" Color="#78CEA588"/>
    <SolidColorBrush x:Key="AffinityColor" Color="#FFB35A5A"/>
    <SolidColorBrush x:Key="StaminaColor" Color="#FF3A241A"/>

    <Style x:Key="WindowStyle" TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{DynamicResource BGColor}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>
    <Style x:Key="GridStyle" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="{DynamicResource BodyColor}"/>
        <Style.Resources>
            <!-- Corner radius -->
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{DynamicResource CornerRadius}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="StackPanelStyle" TargetType="StackPanel">
        <Setter Property="Background" Value="{DynamicResource BodyColor}"/>
        <Style.Resources>
            <!-- Corner radius -->
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="3"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="ScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                    <Border CornerRadius="{DynamicResource CornerRadius}" BorderThickness="2" BorderBrush="{DynamicResource BodySpecialColor}">
                        <ScrollViewer>
                            <ContentPresenter/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{DynamicResource BodySpecialColor}"/>
        <Style.Resources>
            <!-- Corner radius -->
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{DynamicResource CornerRadius}"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="Padding" Value="{DynamicResource Padding}"/>
        <Setter Property="Background" Value="{DynamicResource BodySpecialColor}"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{DynamicResource CornerRadius}"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="SplitterStyle" TargetType="GridSplitter">
        <Setter Property="Background" Value="{DynamicResource GridSplitterColor}"/>
        <Style.Triggers>
            <Trigger Property="VerticalAlignment" Value="Stretch">
                <Setter Property="Margin" Value="0,20"/>
            </Trigger>
            <Trigger Property="HorizontalAlignment" Value="Stretch">
                <Setter Property="Margin" Value="20,0"/>
            </Trigger>
        </Style.Triggers>
        <Style.Resources>
            <!-- Corner radius -->
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="3"/>
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="ButtonStyle" TargetType="Button">
        <!-- BUTTON -->

        <Setter Property="Background" Value="{DynamicResource BodySpecialColor}"/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderThickness="2" BorderBrush="{DynamicResource SpecialColor}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">

                <Setter Property="Background" Value="{DynamicResource SpecialColor}"/>
            </Trigger>
        </Style.Triggers>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="Padding" Value="{DynamicResource Padding}"/>
                <Setter Property="CornerRadius" Value="{DynamicResource CornerRadius}"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="ListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{DynamicResource BodySpecialColor}"/>
        <Setter Property="Foreground" Value="{DynamicResource InfoFontColor}"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{DynamicResource CornerRadius}"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Border CornerRadius="8" Background="{DynamicResource BodySpecialColor}">
                        <Grid>
                            <Rectangle Name="PART_Track"/>
                            <Decorator x:Name="PART_Indicator" HorizontalAlignment="Left">
                                <Border CornerRadius="8" Background="{TemplateBinding Foreground}"/>
                            </Decorator>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="MenuStyle" TargetType="Menu">
        <Setter Property="Background" Value="{DynamicResource BodySpecialColor}"/>
        <Setter Property="Foreground" Value="{DynamicResource InfoFontColor}"/>
    </Style>
    <Style x:Key="MenuItemStyle" TargetType="MenuItem">
        <Setter Property="Background" Value="{DynamicResource BodySpecialColor}"/>
        <Setter Property="Foreground" Value="{DynamicResource InfoFontColor}"/>
        <Style.Resources>
            <!-- Corner radius -->
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="NekodeImageStyle" TargetType="Image">
        <Setter Property="OpacityMask" Value="{DynamicResource BodySpecialColor}"/>
        <Style.Resources>
            <!-- Corner radius -->
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Style.Resources>
            <!-- Corner radius -->
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="3"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>

    <ControlTemplate x:Key="Backgroud" TargetType="Control">
        <Image Grid.ColumnSpan="10" Grid.RowSpan="10" Source="/UI/Wins/Themes/CoffeeTheme/bg.webm" Opacity="0.2" Stretch="UniformToFill" />
    </ControlTemplate>

    <Style x:Key="TextBlockStyle" TargetType="TextBlock">
        <Style.Resources>
            <!-- Corner radius -->
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="3"/>
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>