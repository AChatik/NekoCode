<Window x:Class="NekoCode.ProductionsCalculationWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NekoCode"
        mc:Ignorable="d"
        ShowInTaskbar="True"
        Title="Progress" Height="133" Width="532" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" IsEnabled="False" FontFamily="Comic Sans MS" FontSize="16" LayoutUpdated="Window_LayoutUpdated">
    <Window.Resources>
        <ResourceDictionary x:Name="CurrentTheme">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/Wins/Themes/NightTheme/theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource WindowStyle}"/>
    </Window.Style>
    <Grid Margin="0,0,0,0" Background="{DynamicResource BodyColor}">
        <TextBlock x:Name="MessageText" Foreground="{DynamicResource InfoFontColor}" Text="Processing..." HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="460" Margin="10,10,0,0"/>
        <ProgressBar x:Name="MainProgressBar" Style="{DynamicResource ProgressBarStyle}" Height="30"  Maximum="100" Value="20" Foreground="{DynamicResource SpecialColor}" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top" LayoutUpdated="MainProgressBar_LayoutUpdated" Margin="10,51,0,0"/>
        <Button x:Name="CancelBtn" Style="{DynamicResource ButtonStyle}" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="107" Click="CancelBtn_Click" Margin="415,67,0,0"/>
    </Grid>
</Window>
