<UserControl x:Class="NekoCode.UI.Controls.ProjectItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NekoCode.UI.Controls"
             mc:Ignorable="d" 
             Margin="0,10,0,0"
             x:Name="Base"
             d:DesignHeight="50" d:DesignWidth="250" >
    <UserControl.Resources>
        <ResourceDictionary x:Name="CurrentTheme">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Wins/Themes/NightTheme/theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border x:Name="Body" CornerRadius="{DynamicResource CornerRadius}" LayoutUpdated="UserControl_LayoutUpdated" Height="50" Width="250" BorderThickness="2" BorderBrush="{DynamicResource SpecialColor}" Background="{DynamicResource BodySpecialColor}">

        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width" To="270" Duration="0:0:0.5">
                                        <DoubleAnimation.EasingFunction>
                                            <QuinticEase/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetProperty="Height" To="100" Duration="0:0:0.5">
                                        <DoubleAnimation.EasingFunction>
                                            <QuinticEase/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width" To="250" Duration="0:0:0.5">
                                        <DoubleAnimation.EasingFunction>
                                            <QuinticEase/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetProperty="Height" To="50" Duration="0:0:0.5">
                                        <DoubleAnimation.EasingFunction>
                                            <QuinticEase/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid Margin="0">
            <StackPanel HorizontalAlignment="Center">
                <Label x:Name="ProjectName" Content="Test" HorizontalContentAlignment="Center" FontFamily="Comic Sans MS" Foreground="{DynamicResource FontColor}" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,-3,0,0">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=Body}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="FontSize" To="17" Duration="0:0:0.5">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuinticEase/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="FontSize" To="14" Duration="0:0:0.5">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuinticEase/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>

                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
                <Label x:Name="ProjectPath" Content="Folder/Test.neko" FontFamily="Comic Sans MS" Foreground="{DynamicResource InfoFontColor}" Margin="0,-5,0,0" FontSize="11" Style="{DynamicResource LabelStyle}"/>
            </StackPanel>
            <Grid Width="270" HorizontalAlignment="Center" Height="50" Margin="0,50,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" FontSize="15" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Hide" x:Name="HideCommand" Style="{DynamicResource LabelStyle}" MouseLeftButtonDown="HideCommand_MouseLeftButtonDown"/>
                <Label Grid.Column="1" FontSize="15" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Edit" x:Name="EditCommand" Style="{DynamicResource LabelStyle}" MouseLeftButtonDown="EditCommand_MouseLeftButtonDown"/>
                <Label Grid.Column="2" FontSize="15" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Run" x:Name="RunCommand" Style="{DynamicResource LabelStyle}" MouseLeftButtonDown="RunCommand_MouseLeftButtonDown"/>
            </Grid>
        </Grid>
    </Border>

</UserControl>
